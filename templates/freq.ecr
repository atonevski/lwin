<%- @f[1..34].each_with_index do |f, i| -%>
  <%-= sprintf("%4d", i+1).colorize(:white) -%>
  <%-= sprintf " %3d %3d %3d %3d %3d %3d %3d %3d %4d",
               f[0], f[1],f[2],f[3],f[4],f[5],f[6],f[7],
               f.reduce(0) {|acc, x| acc + x}
  %>
<%- end -%>
